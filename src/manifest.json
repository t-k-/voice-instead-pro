{
  "name": "Voice Instead",
  "version": "18.01.15.57",
  "manifest_version": 2,

  "description": "Yet another TTS (text to speech) extension, with natural voice.",

  "icons": {
	  "48": "icon48.png",
	  "128": "icon.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon36.png"
    },
    "default_title": "Voice Instead Options",
    "default_popup": "popup.html"
  },

	"commands": {
		"speak-selected-text": {
			"suggested_key": {
				"mac": "Command+Q",
				"default": "Ctrl+Q"
			},
			"description": "Speak selected text"
		}
	},

  "content_scripts": [{
	"matches": ["<all_urls>"],
	"css": ["ui.css"],
	"all_frames": false,
	"js": ["jquery.min.js", "content.js"]
  }],

  "background": {
    "scripts": ["config.js", "background.js"]
  },

  "web_accessible_resources": [
    "fa-play.png",
    "fa-pause.png",
    "fa-stop.png",
    "loader.gif"
  ],

  "oauth2": {
    "client_id_debug": "291825512602-3t0mqn3q9d91v9tcqictlr57rngteo6h.apps.googleusercontent.com",
    "client_id": "291825512602-2i213oprsq2t3vo511nrn3gqv0s39etb.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/chromewebstore.readonly"
    ]
  },

  "permissions": [
    "tabs",
	"contextMenus",
	"background",
    "<all_urls>",
	"webRequest",
    "webRequestBlocking",
    "storage",
    "identity",
	"https://www.googleapis.com/"
  ]
}
